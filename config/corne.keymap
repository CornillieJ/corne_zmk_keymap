    combos {
        compatible = "zmk,combos";

        jk_esc {
            bindings = <&kp ESCAPE>;
            key-positions = <20 21>;
            layers = <2>;
        };
    };

    macros {
        euro: euro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LALT>,
                <&macro_tap>,
                <&kp KP_NUMBER_0 &kp KP_NUMBER_1 &kp KP_NUMBER_2 &kp KP_NUMBER_8>,
                <&macro_release>,
                <&kp LALT>;

            label = "EURO";
            wait-ms = <15>;
        };

        next_background: next_background {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp RC(FSLH)>;
            label = "NEXT_BACKGROUND";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp TAB    &kp Q  &kp W  &kp F          &kp P           &kp G    &kp J            &kp L      &kp U            &kp Y    &kp SEMI  &kp DELETE
&sk LALT   &kp A  &kp R  &kp S          &kp T           &kp D    &kp H            &kp N      &kp E            &kp I    &kp O     &kp ENTER
&sk LCTRL  &kp Z  &kp X  &kp C          &kp V           &kp B    &kp K            &kp M      &kp COMMA        &kp DOT  &kp FSLH  &mo 3
                         &mt LCTRL TAB  &kp LEFT_SHIFT  &mo 1    &lt 2 BACKSPACE  &kp SPACE  &sk RIGHT_SHIFT
            >;
        };

        Numbers_Media {
            bindings = <
&none   &kp PAGE_UP  &kp PAGE_DOWN  &kp C_REWIND      &kp C_FAST_FORWARD  &kp C_VOLUME_UP      &kp MINUS  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp ASTERISK   &kp BACKSPACE
&trans  &kp HOME     &kp END        &kp K_PLAY_PAUSE  &kp C_PLAY_PAUSE    &kp C_VOLUME_DOWN    &kp EQUAL  &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp SLASH      &kp NON_US_BACKSLASH
&none   &none        &none          &kp C_PREVIOUS    &kp C_NEXT          &kp C_MUTE           &kp PLUS   &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp LESS_THAN  &kp GREATER_THAN
                                    &trans            &trans              &trans               &kp COMMA  &kp DOT       &kp NUMBER_0
            >;
        };

        Nav_Symbols {
            bindings = <
&kp GRAVE  &kp CARET    &kp PIPE          &kp AMPERSAND      &kp LEFT_BRACKET      &kp RIGHT_BRACKET        &kp CARET         &kp DOLLAR      &kp PERCENT  &kp G              &kp PAGE_DOWN    &none
&kp EXCL   &kp DOLLAR   &kp SINGLE_QUOTE  &kp DOUBLE_QUOTES  &kp LEFT_BRACE        &kp RIGHT_BRACE          &kp B             &kp LEFT        &kp DOWN     &kp UP             &kp RIGHT        &kp W
&kp AT     &kp PERCENT  &kp POUND         &kp UNDERSCORE     &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS    &kp C_PLAY_PAUSE  &kp C_PREVIOUS  &kp C_NEXT   &kp C_VOLUME_DOWN  &kp C_VOLUME_UP  &none
                                          &kp ESCAPE         &kp LEFT_GUI          &euro                    &trans            &trans          &trans
            >;
        };

        function_layer {
            bindings = <
&to 4     &kp F1   &kp F2   &kp F3    &kp F4    &kp F5     &kp F6      &kp F7      &kp F8      &kp F9             &kp F10           &out OUT_TOG
&to 6     &kp F11  &kp F12  &none     &none     &none      &none       &none       &none       &none              &none             &none
&kp CAPS  &none    &none    &none     &none     &to 0      &bt BT_PRV  &bt BT_NXT  &bt BT_CLR  &kp LS(LA(SLASH))  &next_background  &none
                            &mkp MB4  &mkp MB5  &kp TAB    &to 3       &mkp MB1    &mkp MB2
            >;
        };

        gaming {
            bindings = <
&kp TAB    &kp Q  &kp W  &kp E      &kp R      &kp T    &kp N1   &kp N2  &kp N3  &kp N4  &kp N5  &kp N6
&kp CAPS   &kp A  &kp S  &kp D      &kp F      &kp G    &none    &none   &none   &none   &none   &none
&kp LSHFT  &kp Z  &kp X  &kp C      &kp V      &kp B    &none    &none   &none   &none   &none   &none
                         &kp SPACE  &kp SPACE  &mo 5    &kp ESC  &none   &none
            >;
        };

        gaming_menu {
            bindings = <
&kp ESC    &kp N1     &kp N2    &kp N3  &kp N4  &kp N5    &trans  &trans  &trans  &trans  &trans  &to 0
&kp GRAVE  &kp N6     &kp N7    &kp N8  &kp N9  &kp N0    &trans  &trans  &trans  &trans  &trans  &trans
&kp LGUI   &kp LCTRL  &kp LALT  &kp K   &kp I   &kp J     &trans  &trans  &trans  &trans  &trans  &trans
                                &trans  &kp M   &trans    &trans  &trans  &trans
            >;
        };

        right_hand_gaming {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &kp T     &kp R      &kp E        &kp W  &kp Q  &kp TAB
&trans  &trans  &trans  &trans  &trans  &trans    &kp G     &kp F      &kp A        &kp S  &kp D  &kp LSHFT
&trans  &trans  &trans  &trans  &trans  &trans    &kp B     &kp V      &kp C        &kp X  &kp Z  &kp LSHFT
                        &trans  &trans  &trans    &kp LALT  &kp SPACE  &lt 7 LCTRL
            >;
        };

        right_hand_gamingX {
            bindings = <
&to 0  &none  &none  &none  &none  &none    &kp ESC    &kp H         &kp N1  &kp N2  &kp N3  &kp I
&none  &none  &none  &none  &none  &none    &kp K      &kp L         &kp N4  &kp N5  &kp N6  &kp ENTER
&none  &none  &none  &none  &none  &none    &kp J      &kp M         &kp N7  &kp N8  &kp N9  &kp N0
                     &none  &none  &none    &kp GRAVE  &kp LEFT_GUI  &none
            >;
        };
    };
};
